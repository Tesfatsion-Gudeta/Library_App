<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#5E6797">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_books_24"
            android:drawablePadding="8dp"
            android:text="Books"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/baseline_book_24"
            android:drawablePadding="8dp"
            android:text="Currently Reading"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/wantToRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/baseline_to_read_24"
            android:drawablePadding="8dp"
            android:text="Want to Read"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/alreadyRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/baseline_read_24"
            android:drawablePadding="8dp"
            android:text="Already Read Books"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_favorite_border_24"
            android:drawablePadding="8dp"
            android:text="Favourites"

            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_person_outline_24"
            android:drawablePadding="8dp"
            android:text="About"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/licesnce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:text=" developed by Tesfatsion Gudeta \n contact:tesfatsiongudeta7@gmail.com"
        android:textStyle="italic" />

</LinearLayout>